<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base Theme -->
    <style name="Base.Theme.UTS_alat_pertanian" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/brand_primary</item>
        <item name="colorSecondary">@color/light_brown</item>
        <item name="android:statusBarColor" tools:targetApi="21">?attr/colorPrimary</item>
        <item name="colorPrimary">@color/green</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Warna sekunder -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar -->
        <item name="android:statusBarColor">@color/green</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>

    <!-- Theme untuk MainActivity (drawer) -->
    <style name="Theme.NavigationDrawer.NoActionBar" parent="Base.Theme.UTS_alat_pertanian">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="toolbarStyle">@style/Widget.UTS.Toolbar</item>
    </style>

    <!-- Overlay khusus action bar & popup -->
    <style name="Theme.NavigationDrawer.AppBarOverlay" parent="ThemeOverlay.Material3.Dark.ActionBar" />
    <style name="Theme.NavigationDrawer.PopupOverlay" parent="ThemeOverlay.Material3.Light" />

    <!-- Theme global -->
    <style name="Theme.UTS_alat_pertanian" parent="Base.Theme.UTS_alat_pertanian" />

    <!-- Judul toolbar seragam: putih + bold -->
    <style name="AppToolbarTitle" parent="TextAppearance.Material3.TitleLarge">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Style toolbar global (MaterialToolbar) -->
    <style name="Widget.UTS.Toolbar" parent="Widget.Material3.Toolbar">
        <item name="titleTextAppearance">@style/AppToolbarTitle</item>
        <item name="navigationIconTint">@android:color/white</item>
    </style>


</resources>
